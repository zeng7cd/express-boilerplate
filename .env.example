# ============================================
# 环境配置示例文件
# ============================================
# 使用说明：
# 1. 复制此文件为 .env.{environment} (如 .env.development)
# 2. 基础配置已在 .env 文件中定义，这里只需配置环境特定的值
# 3. 修改所有标记为 ⚠️ 的敏感信息

# 应用配置
NODE_ENV=development
PORT=8080
CORS_ORIGIN=http://localhost:8080

# 数据库配置 - ⚠️ 必须修改
DATABASE_URL="mysql://username:password@localhost:3306/database_name"

# 限流配置
COMMON_RATE_LIMIT_MAX_REQUESTS=1000

# 日志配置
LOGGER_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_FILES=10
LOG_PERFORMANCE_MONITORING=true

# Redis配置
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置 - ⚠️ 必须修改为强密钥（至少64字符）
JWT_SECRET=your-super-secret-jwt-key-min-64-chars-long-for-security-please-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-min-64-chars-different-from-access

# 密码加密
BCRYPT_ROUNDS=12

# 监控配置
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
SWAGGER_ENABLED=true

# 安全配置（可选）
API_KEY=
ENABLE_CSRF_PROTECTION=false
# ALLOWED_IPS=1.2.3.4,5.6.7.8

# Sentry 错误追踪（可选）
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# 功能开关
FEATURE_REGISTRATION_ENABLED=true
FEATURE_EMAIL_VERIFICATION=false
FEATURE_TWO_FACTOR_AUTH=false

